rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is document owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read any user profile
      allow read: if isAuthenticated();

      // User can create their own profile
      allow create: if isOwner(userId);

      // User can update their own profile completely, OR
      // Others can update specific fields for game mechanics
      allow update: if isAuthenticated() && (
        isOwner(userId) ||
        // Allow updating points and/or xp (task rewards)
        request.resource.data.diff(resource.data).affectedKeys().hasAll(['points', 'xp']) ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['points']) ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['xp']) ||
        // Allow updating groupIds (when joining groups)
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['groupIds'])
      );

      // Only user can delete their profile
      allow delete: if isOwner(userId);
    }

    // Groups collection
    match /groups/{groupId} {
      // Any authenticated user can read groups (filtering done in app code)
      allow read: if isAuthenticated();

      // Anyone can create a group
      allow create: if isAuthenticated();

      // Members can update group, OR anyone can join by adding themselves to memberIds
      allow update: if isAuthenticated() && (
        request.auth.uid in resource.data.memberIds ||
        (request.auth.uid in request.resource.data.memberIds &&
         !(request.auth.uid in resource.data.memberIds))
      );

      // Only creator can delete
      allow delete: if isAuthenticated() &&
                       request.auth.uid == resource.data.createdBy;
    }

    // Tasks collection
    match /tasks/{taskId} {
      // Anyone authenticated can read tasks
      allow read: if isAuthenticated();

      // Anyone can create a task
      allow create: if isAuthenticated();

      // Creator (assignedBy) or Executor (assignedTo) can update
      allow update: if isAuthenticated() &&
                       (request.auth.uid == resource.data.assignedBy ||
                        request.auth.uid == resource.data.assignedTo);

      // Creator can delete, OR group creator can delete (for group deletion)
      allow delete: if isAuthenticated() && (
        request.auth.uid == resource.data.assignedBy ||
        request.auth.uid == get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data.createdBy
      );
    }

    // Wishes collection
    match /wishes/{wishId} {
      // Anyone authenticated can read wishes
      allow read: if isAuthenticated();

      // Anyone can create a wish
      allow create: if isAuthenticated();

      // Creator can update/delete, OR group members can approve
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.createdBy ||
        request.auth.uid in get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data.memberIds
      );

      // Creator can delete, OR group creator can delete (for group deletion)
      allow delete: if isAuthenticated() && (
        request.auth.uid == resource.data.createdBy ||
        request.auth.uid == get(/databases/$(database)/documents/groups/$(resource.data.groupId)).data.createdBy
      );
    }

    // Achievements collection
    match /achievements/{achievementId} {
      // Anyone authenticated can read achievements
      allow read: if isAuthenticated();
      // Anyone can create achievements
      allow create: if isAuthenticated();
      // No updates or deletes allowed
      allow update, delete: if false;
    }

    // Task history collection
    match /taskHistory/{historyId} {
      // Anyone authenticated can read history
      allow read: if isAuthenticated();
      // Anyone can create history entries
      allow create: if isAuthenticated();
      // No updates or deletes allowed
      allow update, delete: if false;
    }
  }
}
